<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ProcessActivity"
    android:id="@+id/p_main"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/p_con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="50dp">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ok"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemesanan telah berhasil"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunggu pemilik catering menghubungi anda Untuk Konfirmasi"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batalkan Pesanan jika pemilik tidak menghubungi setelah 3 hari"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/p_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oke"
            android:textAllCaps="false"
            android:background="@drawable/button_30dp"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/p_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="50dp">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_error_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemesanan Gagal, Coba lagi nanti"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#000000"
            android:layout_marginTop="24dp"/>
        <Button
            android:id="@+id/p_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oke"
            android:textAllCaps="false"
            android:background="@drawable/button_30dp"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/p_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ProgressBar
            android:layout_width="72dp"
            android:layout_height="72dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan sedang di proses"/>
    </LinearLayout>
</RelativeLayout>