<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailcatorder_con"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.DetailCatorderActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_ocat"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            tools:targetApi="lollipop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="54dp"
                android:layout_marginEnd="54dp"
                android:fontFamily="sans-serif-medium"
                android:text="Detail Order"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/do_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(5/12/2019)"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/oca_remind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A0B849"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:text="Pastikan Anda mengkonfirmasi pesanan kepada pemesan"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/do_call0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="#00000000"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/hubungi_sekarang"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/maps" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:fontFamily="sans-serif-light"
                                android:text="Alamat Pengorder"
                                android:textColor="#000000"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/do_alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="46dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="20dp"
                            android:text="Perum. BTN Kopkar Dwi Karya BTN C10 No.13 Lempuyang Bandar Lampung Tengah" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="#4A585858" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Status Pemesanan"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/do_status1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="#4A585858" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/do_iv1"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/done" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Menunggu Konfirmasi" />
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/do_status2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="#4A585858" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/do_iv2"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/no" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Pesanan Terkonfirmasi" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/do_status3"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="#4A585858" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/do_iv3"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/no" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Pesanan Sedang Diproses" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/do_iv4"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/no" />

                        <TextView
                            android:id="@+id/do_ts4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Pesanan Selesai" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="#4A585858" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/do_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Pemesan : Siapa ya.."/>
                    <TextView
                        android:id="@+id/do_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor HP : 082269212156"/>
                    <TextView
                        android:id="@+id/do_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Menu : Menu nya apa aja"/>
                    <TextView
                        android:id="@+id/do_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Biaya : IDR 2000000"/>
                    <TextView
                        android:id="@+id/do_tanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pesanan : 12/12/2019"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/con_tos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F7F0D0"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <CheckBox
                android:id="@+id/tos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center|left"
                android:text="Saya telah melakukan konfirmasi dan disetujui oleh kedua belah pihak"
                android:textColor="#5E5858"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/oca_waiting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/do_reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_secondary"
                android:fontFamily="sans-serif-medium"
                android:text="Tolak Pesanan"
                android:textAllCaps="false"
                android:textColor="#FBBF5E" />

            <Button
                android:id="@+id/do_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:fontFamily="sans-serif-medium"
                android:text="Terima Pesanan"
                android:textAllCaps="false"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/oca_process"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/do_call1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:fontFamily="sans-serif-medium"
                android:text="Hubungi Pemesan"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/do_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:fontFamily="sans-serif-medium"
                android:text="Proses Pesanan"
                android:textAllCaps="false"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/oca_selesai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/do_call2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:fontFamily="sans-serif-medium"
                android:text="Hubungi Pemesan"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/do_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:fontFamily="sans-serif-medium"
                android:text="Pesanan Selesai"
                android:textAllCaps="false"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>